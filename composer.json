{
    "name": "yiisoft/yii-bulma",
    "type": "library",
    "description": "Collection of Widgets for Bulma CSS framework.",
    "keywords": [
        "yii",
        "bulma",
        "widget"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii-bulma/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii-bulma"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "foxy/foxy": "^1.1@dev",
        "yiisoft/assets": "@dev",
        "yiisoft/arrays": "@dev",
        "yiisoft/html": "@dev",
        "yiisoft/widget": "@dev"
    },
    "require-dev": {
        "infection/infection": "^0.19",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.0",
        "yiisoft/di": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\Bulma\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\Bulma\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
